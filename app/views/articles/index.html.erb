<h1>List all articles</h1>

<%= link_to "New Article", new_article_path, class: 'btn btn-primary', id: "new-article-btn" %>

	<%= @articles.each do |article| %>
		<div class="well well-lg">
			<div class="article-title">
				<%= link_to article.title, article_path(article) %></a>
			</div>
			<div class="article-body">
					<%= truncate(article.description, length: 500) %>
			</div>
			<div class="author">
			<% if article.user %>
				<small>Created by: <%= article.user.email %></small>
			<% end %>	
			</div>
		</div>	
	<% end %>	




