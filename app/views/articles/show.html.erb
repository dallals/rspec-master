
<article class="detail-article">
	<h1 class="article-detail-title"><%= @article.title %></h1>

	<div class="glyphicon glyphicon-calendar" id="article-date">
		<%= @article.created_at.strftime("%b %d, %y")%>
	</div>
	
	<div class="article-body">	
		<%= truncate(@article.description, length: 200) %>
	</div>
</article>	




<br>
<%= link_to "All Articles", articles_path, class: 'btn btn-lg btn-success btn-space' %>
<% if user_signed_in? %>
	<%= link_to "New Article", new_article_path, class: 'btn btn-primary btn-lg btn-space' %>
	<% if current_user.id == @article.user_id %>
		<%= link_to "Edit Article", edit_article_path(@article), class: 'btn btn-lg btn-info btn-space' %>
		<%= link_to "Delete Article", article_path(@article), method: :delete, data: { confirm: "Are you sure "}, class: 'btn btn-danger btn-lg btn-space' %>
	<% end %>
<% end %>	


